{
    "name": "express-backend-template",
    "module": "index.ts",
    "private": true,
    "scripts": {
        "dev": "bun src/server.ts",
        "build": "bunx tsc -p tsconfig.build.json",
        "start": "node dist/server.js",
        "clean": "rimraf dist",
        "lint": "bunx eslint . --ext .ts --max-warnings=10",
        "lint:fix": "bunx eslint . --ext .ts --fix",
        "format": "bunx prettier --write .",
        "check-types": "bunx tsc --noEmit"
    },
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "@types/bun": "latest",
        "@types/cors": "^2.8.18",
        "@types/express": "^5.0.1",
        "@types/node": "^22.15.18",
        "eslint": "^9.26.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-n": "^17.18.0",
        "eslint-plugin-prettier": "^5.4.0",
        "eslint-plugin-promise": "^7.2.1",
        "globals": "^16.1.0",
        "prettier": "^3.5.3",
        "ts-node-dev": "^2.0.0",
        "typescript-eslint": "^8.32.1"
    },
    "peerDependencies": {
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "rimraf": "^6.0.1"
    }
}
